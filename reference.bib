@phdthesis{__2019-1,
	type = {硕士},
	title = {风险社会下社会稳定指数及其指标体系研究},
	url = {https://kns.cnki.net/KCMS/detail/detail.aspx?dbcode=CMFD&dbname=CMFD201902&filename=1019106662.nh&v=},
	abstract = {社会转型时期,我国面临的风险因素繁杂多元,新旧类型的矛盾与冲突交织,社会整体呈现高不确定性、高复杂化特征,风险社会俨然成为我国现代化进程的现实背景。这对社会治理水平提出了更高的要求,政府亟需科学有效的手段规避社会风险,解决社会问题以实现社会的和谐稳定。鉴于此,本研究引入指数建构方法,试图搭建一套能够客观反映社会稳定状况、实时监测社会稳定动态以及预测预警社会稳定风险的社会稳定指数指标体系。本研究首先基于风险社会理论与社会治理理论,结合社会稳定指数研究相关文献,对社会稳定与社会稳定风险的概念进行深入剖析,归纳总结了影响社会稳定的风险因素并搭建了维度模型,具体而言包括自然灾害、政治、经济、社会、人口、公共卫生与生态环境七大模块。在此基础上,设计并选取细分评价指标,形成完整的三层次指标体系,共包括7个一级指标,17个二级指标和50个三级指标。其后,通过向政府人员与专家发放层次分析法调查问卷,计算各级指标权重,并确定指数合成方案。为进一步验证及分析指数运行效果,本研究最终选取了十五座新一线城市为研究对象,对涉及数据进行处理计算。结果表明,2015-2017年新一线城市社会稳定情况总体良好,社会治理成效颇为可观,但个别城市得分排名急剧波动的情况亦不乏存在。整体上对各地社会稳定情况威胁最大的因素分布在人口、经济与生态环境领域,需要政府加强监管,采取针对性治理对策及行为。},
	language = {zh-CN},
	school = {浙江大学},
	author = {童, 余美},
	collaborator = {陈, 丽君},
	year = {2019},
	note = {5 citations(CNKI)[2023-2-3]},
	keywords = {社会稳定风险, Social governance, 风险社会, 社会稳定指数, 社会治理, Indicator system, Social stability index, Social stability risk, 指标体系 Risk society},
	file = {风险社会下社会稳定指数及其指标体系研究_童余美.caj:C\:\\Users\\yuhangmeng\\Zotero\\storage\\Q58LHGS8\\风险社会下社会稳定指数及其指标体系研究_童余美.caj:application/octet-stream},
}

